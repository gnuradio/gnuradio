<?xml version="1.0"?>
<!--
###################################################
## Frame Sync Encoder
###################################################
 -->
<block>
  <name>Frame Sync Encoder</name>
  <key>dtv_catv_frame_sync_enc_bb</key>
  <import>from gnuradio import dtv</import>
  <make>dtv.catv_frame_sync_enc_bb($ctrlword)</make>
  <param>
    <name>Control Word</name>
    <key>ctrlword</key>
    <value>6</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
