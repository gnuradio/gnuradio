""" A tool for editing GNU Radio out-of-tree modules. """

import click

from gnuradio.modtool import *


@click.group(epilog='Manipulate with GNU Radio modules source code tree. ' + \
             'Call it without options to run specified command interactively')
def modtool():
    """ A tool for editing GNU Radio out-of-tree modules. """
    pass

modtool.add_command(ModToolAdd().parser)
modtool.add_command(ModToolDisable().parser)
modtool.add_command(ModToolInfo().parser)
modtool.add_command(ModToolMakeXML().parser)
modtool.add_command(ModToolNewModule().parser)
modtool.add_command(ModToolRemove().parser)
modtool.add_command(ModToolRename().parser)

if __name__ == '__main__':
    try:
        modtool()
    except KeyboardInterrupt:
        pass
