<?xml version="1.0"?>
<!--
###################################################
## Tuntap PDU Message source/sink
###################################################
 -->
<block>
	<name>TunTap PDU (old)</name>
	<key>gr_tuntap_pdu</key>
	<import>from gnuradio import gr</import>
	<make>gr.tuntap_pdu($ifn, $mtu)</make>
    <param>
        <name>Interface Name</name>
        <key>ifn</key>
        <value>tun0</value>
        <type>string</type>
    </param>
    <param>
        <name>MTU</name>
        <key>mtu</key>
        <value>10000</value>
        <type>int</type>
    </param>
	<sink>
		<name>pdus</name>
		<type>message</type>
        <optional>1</optional>
	</sink>
	<source>
		<name>pdus</name>
		<type>message</type>
        <optional>1</optional>
	</source>
</block>
