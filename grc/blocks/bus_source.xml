<block>
	<name>Bus Source</name>
	<key>bus_source</key>
	<make>$yesno.yesno</make>

	<param>
		<name>On/Off</name>
		<key>yesno</key>
		<type>enum</type>
		<option>
			<name>On</name>
			<key>on</key>
			<opt>yesno:True</opt>
		</option>
		<option>
			<name>Off</name>
			<key>off</key>
			<opt>yesno:False</opt>
		</option>
	</param>
</block>
