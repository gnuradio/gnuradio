###################################################
 -->
<block>
	<name>Message Strobe</name>
	<key>gr_message_strobe</key>
	<import>from gnuradio import gr</import>
	<import>from gruel import pmt</import>
	<make>gr.message_strobe($msg, $period)</make>
	<param>
		<name>Message PMT</name>
		<key>msg</key>
		<value>pmt.pmt_intern("TEST")</value>
		<type>raw</type>
	</param>
	<param>
		<name>Period (ms)</name>
		<key>period</key>
		<value>1000</value>
		<type>real</type>
	</param>
	<sink>
		<name>set_msg</name>
		<type>message</type>
        <optional>1</optional>
	</sink>
	<source>
		<name>strobe</name>
		<type>message</type>
        <optional>1</optional>
	</source>
</block>
