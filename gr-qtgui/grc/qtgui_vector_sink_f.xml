    <key>nconnections</key>
    <value>1</value>
    <type>int</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Update Period</name>
    <key>update_time</key>
    <value>0.10</value>
    <type>real</type>
    <hide>part</hide>
  </param>
  <param>
    <name>GUI Hint</name>
    <key>gui_hint</key>
    <value></value>
