    <name>X-Axis Units</name>
    <key>x_units</key>
    <value>""</value>
    <type>string</type>
    <hide>'part'</hide>
  </param>

  <param>
    <name>Y-Axis Units</name>
    <key>y_units</key>
    <value>""</value>
    <type>string</type>
    <hide>'part'</hide>
  </param>

