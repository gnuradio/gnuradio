    <key>x_step</key>
    <value>1.0</value>
    <type>real</type>
  </param>

  <param>
    <name>X-Axis Label</name>
    <key>x_axis_label</key>
    <value>"x-Axis"</value>
    <type>string</type>
    <hide>#if (len($x_axis_label()) > 0 and $x_axis_label != "x-Axis") then 'none' else 'part'#</hide>
  </param>

  <param>
    <name>Y-Axis Label</name>
    <key>y_axis_label</key>
    <value>"y-Axis"</value>
    <type>string</type>
