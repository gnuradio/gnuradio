    <base_key>label1</base_key>
    <name>Line 6 Label</name>
    <key>label6</key>
    <hide>#if int($nconnections()) >= 6 then 'part' else 'all'#</hide>
  </param>

  <param>
    <base_key>color1</base_key>
    <name>Line 6 Color</name>
    <key>color6</key>
    <hide>#if int($nconnections()) >= 6 then 'part' else 'all'#</hide>
  </param>

  <param>
