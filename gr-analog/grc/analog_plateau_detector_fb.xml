<?xml version="1.0"?>
<block>
  <name>Plateau Detector</name>
  <key>analog_plateau_detector_fb</key>
  <import>from gnuradio import analog</import>
  <make>analog.plateau_detector_fb($max_len, $threshold)</make>
  <param>
    <name>Max. plateau length</name>
    <key>max_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <value>0.9</value>
    <type>real</type>
  </param>
  <sink>
    <name>in</name>
    <type>real</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
