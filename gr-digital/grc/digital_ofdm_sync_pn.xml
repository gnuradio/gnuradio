###################################################
 -->
<block>
	<name>OFDM Sync PN</name>
	<key>digital_ofdm_sync_pn</key>
        <category>[Core]/Deprecated</category>
	<import>from gnuradio import digital</import>
	<make>digital.ofdm_sync_pn($fft_length, $cp_length, $logging)</make>
	<param>
		<name>FFT Length</name>
		<key>fft_length</key>
		<type>int</type>
	</param>
	<param>
		<name>CP Length</name>
		<key>cp_length</key>
		<type>int</type>
	</param>
	<param>
		<name>Logging</name>
		<key>logging</key>
		<value>False</value>
		<type>bool</type>
	</param>
	<sink>
		<name>in</name>
		<type>complex</type>
	</sink>
	<source>
		<name>fine freq</name>
		<type>float</type>
	</source>
	<source>
		<name>timing sig</name>
		<type>byte</type>
	</source>
</block>
