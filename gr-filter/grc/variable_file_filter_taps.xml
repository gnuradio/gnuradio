<?xml version="1.0"?>
<!--
###################################################
##File Filter Taps
###################################################
 -->
<block>
  <name>File Filter Taps</name>
  <key>variable_file_filter_taps</key>
  <category>[Filters]</category>
  <import>from gnuradio import filter</import>
  <var_make>self.$(id) = $(id) = filter.file_taps_loader($file, $verbose).get_taps()</var_make>
  <var_value>filter.file_taps_loader($file, $verbose).get_taps()</var_value>
  <make></make>
  <param>
    <name>File</name>
    <key>file</key>
    <value></value>
    <type>file_open</type>
  </param>
  <param>
    <name>Verbose Output</name>
    <key>verbose</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>YES</name>
      <key>True</key>
    </option>
    <option>
      <name>NO</name>
      <key>False</key>
    </option>
  </param>
  <doc>
This block maps filter taps created with gr_filter_design to a variable. \
Simply insert the ID of this block into the taps field of the block you want to import the file taps to.
</doc>
</block>
